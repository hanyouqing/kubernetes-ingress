# MCP Environment Variables Template
# Copy this file to .cursor/mcp.env and fill in your values
# NEVER commit the actual .cursor/mcp.env file to version control

# Kubernetes Configuration
export KUBECONFIG_PATH="~/.kube/config"
export K8S_NAMESPACE="nginx-ingress"
export K8S_CONTEXT="your-cluster-context"

# Helm Configuration
export HELM_CACHE_HOME="~/.cache/helm"
export HELM_NAMESPACE="nginx-ingress"

# GitHub Configuration (Use Personal Access Token with minimal permissions)
export GITHUB_TOKEN="ghp_your_github_token_here"

# Docker Hub Configuration (Use Access Token instead of password)
export DOCKERHUB_TOKEN="your_dockerhub_token_here"
export DOCKERHUB_ORG="your_organization"

# Prometheus Configuration
export PROMETHEUS_URL="https://prometheus.your-domain.com"
export PROMETHEUS_TOKEN="your_prometheus_token"

# Grafana Configuration
export GRAFANA_URL="https://grafana.your-domain.com"
export GRAFANA_TOKEN="your_grafana_token"
export GRAFANA_ORG_ID="1"

# Terraform Configuration
export TF_STATE_FILE="./terraform.tfstate"
export TF_WORKSPACE="staging"

# NGINX Configuration
export NGINX_BINARY_PATH="/usr/local/bin/nginx"
export NGINX_CONFIG_PATH="/etc/nginx/nginx.conf"
export NGINX_LOG_PATH="/var/log/nginx"

# Certificate Configuration
export CA_BUNDLE_PATH="/etc/ssl/certs/ca-certificates.crt"

# Network Configuration
export DNS_SERVERS="8.8.8.8,1.1.1.1"

# Enhanced Troubleshooting Configuration

# App Protect Configuration
export APP_PROTECT_ENABLED="false"

# Custom Rules Path
export CUSTOM_RULES_PATH="/path/to/custom/rules"

# Backup Storage Configuration
export BACKUP_STORAGE_PATH="/backup/nginx-ingress"

# Security Notes:
# 1. Use HTTPS URLs for all external services
# 2. Use tokens instead of passwords where possible
# 3. Set appropriate permissions and scopes
# 4. Rotate credentials regularly
# 5. Use environment-specific configurations
# 6. Enable audit logging
# 7. Implement rate limiting
# 8. Use read-only access where possible 
